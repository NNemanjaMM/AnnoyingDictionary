<Window x:Class="AnnoyingDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:r="clr-namespace:AnnoyingDictionary.Properties"
        xmlns:panels="clr-namespace:AnnoyingDictionary.View.Panel"
        Title="{x:Static r:Resources.RESOURCE_ANNOYING_DICTIONARY}"
        MinHeight="300" MinWidth="400" Height="300" Width="400">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <panels:GermanPanel Grid.Row="0" VerticalContentAlignment="Center" />
        <DockPanel Grid.Row="1" VerticalAlignment="Stretch" LastChildFill="True" >
            <StackPanel DockPanel.Dock="Left">
                <Button Width="40" Height="30" Margin="5" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Right">
                <Button Width="40" Height="30" Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="40" Height="30" Margin="5" />
                <Button Width="40" Height="30" Margin="5" />
                <Button Width="40" Height="30" Margin="5" />
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
